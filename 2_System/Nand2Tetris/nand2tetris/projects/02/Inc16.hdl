/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
   // Put you code here:
   Not16(in=in[0..15], out=notall);
   And16(a=in[0..15], b=notall, out=allzero);
   lastone(in=allzero, out=lastonearr);
   Add16(a=in, b=lastonearr, out=out);
}
